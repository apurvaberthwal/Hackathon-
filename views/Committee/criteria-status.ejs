<%- include("nav") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criteria Status</title>
    <style>
        h1 {
            color: white;
        }

        body {
            background: linear-gradient(120deg, #3a7bd5 100%, #3a6073 100%);
            font-family: Arial, sans-serif;
            margin: 0;
            padding-top: 80px;
            height: 100vh;
            position: relative;
        }

        .container-main {
            display: flex;
            justify-content: center;
            margin-top: 15px;
        }

        .container {
            width: 85%;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            padding: 10px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            color: black;
        }

        td {
            color: white;
        }

        .btn {
            display: inline-block;
            padding: 6px 12px;
            margin: 4px 2px;
            border-radius: 4px;
            color: white;
            text-align: center;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-view {
            background-color: #4CAF50;
        }

        .btn-edit {
            background-color: #008CBA;
        }

        h1 {
            text-align: center;
            margin-bottom: 40px;
        }

        .alert-success {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 9999;
            padding: 15px;
            border: 1px solid transparent;
            border-radius: 4px;
            color: #3c763d;
            background-color: #dff0d8;
            border-color: #d6e9c6;
            display: none; /* Initially hidden */
        }

        .btn-back {
            background-color: #f44336; /* Red background color */
            color: white;
            padding: 6px 12px;
            margin: 4px 2px;
            border-radius: 4px;
            text-align: center;
            cursor: pointer;
            border: none;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <!-- Display success message if available -->
    <script>
        const successMsg = "<%= successMsg %>";
        if (successMsg) {
            alert(successMsg); // Display the popup
        }
    </script>
    <button class="btn btn-back" onclick="history.back()">Back</button>
    <div class="container-main">
        <div class="container">
            <h1>Criteria Status</h1>
            <p>User ID: <%= userId %></p>

            <table id="criteriaTable">
                <thead>
                    <tr>
                        <th>Criteria Number</th>
                        <th>Criteria Name</th>
                        <th>Self-Appraisal Status</th>
                        <th>Committee Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data[0].forEach(row => { %>
                        <tr>
                            <td><%= row['Criteria Number'] %></td>
                            <td><%= row['Criteria Name'] %></td>
                            <td><%= row['Self-Approved Marks'] %></td>
                            <td><%= row['Committee Marks'] %></td>
                            <td>
                                <form class="form-container" action="/committee/report/review/" method="POST">
                                    <input type="hidden" name="user_id" value="<%= userId %>">
                                    <input type="hidden" name="criteria_id" value="<%= row['Criteria Number'] %>">
                                    <input type="hidden" name="appraisal_id" value="<%= appraisal_id %>">
                                    <button type="submit" class="btn btn-view">Review</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div> 
    <script>
    
    console.log(<%- JSON.stringify(data) %>);

        document.addEventListener("DOMContentLoaded", function() {
            const alertSuccess = document.querySelector('.alert-success');
            if (alertSuccess) {
                alertSuccess.style.display = 'block';
                setTimeout(function() {
                    alertSuccess.style.display = 'none';
                }, 4000);
            }
        });
    </script>
</body>
</html>
