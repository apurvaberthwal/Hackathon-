<style>
  body {
        margin: 0 !important;
    padding: 0  !important;
    }
  .navbar {
  
    background-color: #333;
    overflow: hidden;
  }

  .navbar a {
    float: left;
    display: block;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 20px;
    text-decoration: none;
  }

  .navbar a:hover {
    background-color: #ddd;
    color: black;
    border-radius: 6px;

  }

  .navbar .badge {
    background-color: red;
    color: white;
    padding: 2px 8px;
    border-radius: 50%;
    font-size: 14px;
    vertical-align: middle; /* Adjust this property */
  }

  .navbar .right {
    float: right;
  }
  .navbar .dropdown {
    float: left;
    overflow: hidden;
  }

  .navbar .dropdown .dropbtn {
    margin-top: 0px;
    vertical-align: middle;
    width: fit-content;
    font-size: 16px;  
    border: none;
    outline: none;
    color: #f2f2f2;
    padding: 14px 20px;
    background-color: inherit;
    cursor: pointer;
  }

  .navbar .dropdown:hover .dropbtn {
    background-color: #ddd;
    color: black;
    border-radius: 6px;

  }

  .navbar .dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
    border: none;
  }

  .navbar .dropdown-content a {
    float: none;
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
  }

  .navbar .dropdown-content a:hover {
    background-color: #ddd;
    border-radius: 15px;
  }

  .navbar .dropdown:hover .dropdown-content {
    display: block;
  }
</style>

<nav class="navbar">
  <a href="#">Principal Portal</a>
  <a href="/principal/dashboard">Dashboard</a>
  <div class="dropdown">
    <button class="dropbtn">Department</button>
    <div class="dropdown-content">
      <a href="/principal/add-departments">Add Department</a>
      <a href="/principal/departments">Manage Departments</a>
    </div>
  </div>
  <a href="/principal/approvals">
    Approvals 
    <% if (typeof pendingRequestsCount !== 'undefined' && pendingRequestsCount > 0) { %>
        <span class="badge"><%= pendingRequestsCount %></span>
    <% } %>
  </a>
  <div class="dropdown">
    <button class="dropbtn">Committee</button>
    <div class="dropdown-content">
      <a href="/principal/createCommittee">Create Committee</a>
      <a href="/principal/editCommittee">Edit Committee</a>
    </div>
  </div>
  <a href="/principal/createAppraisal">Apprisal</a>
  <a href="/principal/appraisalReport">Reports</a>
  <a href="/principal/profile">Profile</a>
  <a href="/principal/logout" class="right">Logout</a>
</nav>