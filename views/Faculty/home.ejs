<%- include('nav') %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Table</title>
    <style>
         
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #2e2c2c;
        }
        
        h1 {
            text-align: center;
            color: white;
        }
        
        .search-container {
            text-align: center;
            margin-bottom: 20px;
        }
        
        .search-container input[type="text"] {
            padding: 10px;
            width: 300px;
            font-size: 16px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #fff;
        }
        
        table,
        th,
        td {
            border: 1px solid #ddd;
        }
        
        th,
        td {
            padding: 12px;
            text-align: left;
        }
        
        th {
            background-color: #000080;
            /* Dark blue */
            color: white;
        }
        
        .btn {
            padding: 5px 10px;
            margin: 2px;
            border: none;
            cursor: pointer;
            border-radius: 4px;
        }
        
        .view-btn {
            background-color: #4CAF50;
            color: white;
        }
        
        .approve-btn {
            background-color: #008CBA;
            color: white;
        }
        
        .pending-btn {
            background-color: #f44336;
            color: white;
        }
        .welcome-message {
            text-align: center;
            color: white;
            font-size: 20px;
        }
    </style>
</head>


   

  

<body>
    <h1>Welcome to the Principal's Dashboard</h1>
    <p class="welcome-message">Here you can manage school activities, view reports, and more.</p>

